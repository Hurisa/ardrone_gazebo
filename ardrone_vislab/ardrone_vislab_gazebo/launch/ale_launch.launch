<?xml version="1.0"?>
<launch>

  <env name="GAZEBO_MODEL_PATH" value="$(find ardrone_vislab_gazebo):$(optenv GAZEBO_MODEL_PATH)"/>
  
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="world" default="isr_7th_floor.world" />

  <!-- start up world -->
  <include file="$(find ardrone_vislab_gazebo)/launch/ardrone_sim_world.launch">
  	<arg name="use_sim_time" value="$(arg use_sim_time)" />
  	<arg name="gui" value="$(arg gui)" />
  	<arg name="world" value="$(arg world)" />
  </include>

  <!-- Spawn ale model -->
  <param name="ale_model" textfile="$(find ardrone_vislab_description)/urdf/ale/model.sdf" />
  <node name="spawn_ale" pkg="gazebo_ros" type="spawn_model" args="-sdf -param ale_model -model motore_e_slitta_new_sdf" respawn="false" output="screen" />
</launch>
